<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ListItemArticleTitle">
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:font">@font/roboto_regular</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/padding_16</item>
    <item name="android:paddingRight">@dimen/padding_16</item>
    <item name="android:paddingLeft">@dimen/padding_16</item>
    <item name="android:paddingBottom">@dimen/padding_4</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">4</item>
    <item name="android:minLines">2</item>


  </style>
  <style name="ListItemArticleSubTitle">
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:font">@font/roboto_thin</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
    <item name="android:minLines">2</item>
    <item name="android:paddingRight">@dimen/padding_16</item>
    <item name="android:paddingLeft">@dimen/padding_16</item>
    <item name="android:paddingBottom">@dimen/padding_16</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>

  </style>


</resources>